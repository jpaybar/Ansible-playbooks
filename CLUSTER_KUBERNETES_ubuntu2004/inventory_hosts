##########################
# Example Inventory
##########################

[controllers]
controller ansible_host=172.30.240.10

[nodes]
node1 ansible_host=172.30.240.20
#server3 ansible_host=192.168.10.50

##########################################################################
# Makes sure we use Python 3 (/usr/bin/python3) on remote hosts.
# [nodes:vars] sets global values for all nodes in the "nodes" group.
# This is necessary because by default Ansible will try to use
# /usr/bin/python, which is not available on newer Ubuntu versions.
# Other option would be [all:vars] for all machines.
#########################################################################
[all:vars]
ansible_python_interpreter=/usr/bin/python3


